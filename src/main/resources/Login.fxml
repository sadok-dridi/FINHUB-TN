<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.LoginController"
      stylesheets="@styles.css"
      style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2); -fx-padding: 40;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox alignment="CENTER" spacing="15"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 10);"
          maxWidth="400">

        <Text text="Gestion des Utilisateurs"
              style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #333;"/>

        <Text text="Connexion Ã  votre compte"
              style="-fx-font-size: 14px; -fx-fill: #666;"/>

        <VBox spacing="15" alignment="CENTER">
            <TextField fx:id="emailField" promptText="Email"
                       style="-fx-pref-width: 300; -fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd;"/>

            <PasswordField fx:id="passwordField" promptText="Mot de passe"
                           style="-fx-pref-width: 300; -fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd;"/>

            <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;" wrapText="true" managed="false"/>

            <Button fx:id="loginButton" text="Se Connecter"
                    style="-fx-pref-width: 300; -fx-padding: 10; -fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                    onAction="#handleLogin"/>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Pas encore de compte?" style="-fx-text-fill: #666;"/>
                <Hyperlink fx:id="signupLink" text="S'inscrire"
                           onAction="#handleSignupLink"
                           style="-fx-text-fill: #667eea; -fx-font-weight: bold; -fx-border-color: transparent;"/>
            </HBox>
        </VBox>
    </VBox>
</VBox>