<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.finhub.controller.AdminDashboardController"
            style="-fx-background-color: transparent;">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: -color-card-bg; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0); -fx-border-color: transparent -color-card-border transparent transparent; -fx-border-width: 0 1 0 0;" prefWidth="250">
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Circle radius="20" fill="#2D2A40"/>
                <VBox>
                    <Label text="FinHub Admin" style="-fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                    <Label text="Dashboard" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
                </VBox>
            </HBox>
            
            <Region prefHeight="30"/>
            
            <Label text="MAIN" style="-fx-text-fill: -color-text-muted; -fx-font-size: 10px; -fx-font-weight: bold;"/>
            
            <Button text="Dashboard" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: -color-primary; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Users" onAction="#handleGoToUsers" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Transactions" onAction="#handleGoToTransactions" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Support" onAction="#handleGoToSupport" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Alerts" onAction="#handleGoToAlerts" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <Button text="Log Out" onAction="#handleLogout" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-error; -fx-padding: 10; -fx-cursor: hand;"/>
        </VBox>
    </left>


    <center>
        <VBox style="-fx-padding: 30; -fx-background-color: transparent;" spacing="20">
            <VBox spacing="5">
                <Label text="Overview" styleClass="header-text"/>
                <Label text="Key system metrics and status" styleClass="sub-header-text"/>
            </VBox>

            <!-- Stats Grid -->
            <FlowPane hgap="20" vgap="20" prefWrapLength="800">
                
                <!-- Users Card -->
                <VBox style="-fx-background-color: -color-card-bg; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" minWidth="220">
                     <Label text="Total Users" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 14px;"/>
                     <Label fx:id="totalUsersLabel" text="Loading..." style="-fx-text-fill: -color-text-primary; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Volume Card -->
                <VBox style="-fx-background-color: -color-card-bg; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" minWidth="220">
                     <Label text="Total Transaction Volume" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 14px;"/>
                     <Label fx:id="totalVolumeLabel" text="Loading..." style="-fx-text-fill: -color-text-primary; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Tickets Card -->
                <VBox style="-fx-background-color: -color-card-bg; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" minWidth="220">
                     <Label text="Open Support Tickets" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 14px;"/>
                     <Label fx:id="openTicketsLabel" text="Loading..." style="-fx-text-fill: -color-text-primary; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- System Health Card -->
                 <VBox style="-fx-background-color: -color-card-bg; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" minWidth="220">
                     <Label text="System Status" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 14px;"/>
                     <Label fx:id="systemHealthLabel" text="Unknown" style="-fx-text-fill: -color-text-muted; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

            </FlowPane>
        </VBox>
    </center>

</BorderPane>
