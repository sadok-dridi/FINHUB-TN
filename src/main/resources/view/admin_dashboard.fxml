<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.finhub.controller.AdminDashboardController"
            style="-fx-background-color: transparent;">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: -color-card-bg; -fx-padding: 25 5 25 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0); -fx-border-color: transparent -color-card-border transparent transparent; -fx-border-width: 0 1 0 0;" prefWidth="200">
            
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 0 10;">
                <Circle radius="15" fill="#2D2A40"/>
                <VBox>
                    <Label text="FinHub Admin" style="-fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                    <Label text="Dashboard" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 11px;"/>
                </VBox>
            </HBox>
            
            <Region prefHeight="30"/>
            
            <Label text="MAIN" style="-fx-text-fill: -color-text-muted; -fx-font-size: 10px; -fx-font-weight: bold; -fx-padding: 0 0 0 10;"/>
            
            <Button text="Dashboard" maxWidth="Infinity" styleClass="sidebar-button" style="-fx-background-color: -color-primary; -fx-text-fill: white;"/>
            <Button text="Users" onAction="#handleGoToUsers" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Transactions" onAction="#handleGoToTransactions" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Escrows" onAction="#handleGoToEscrows" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Support" onAction="#handleGoToSupport" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Alerts" onAction="#handleGoToAlerts" maxWidth="Infinity" styleClass="sidebar-button"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <HBox alignment="CENTER">
                <Button text="Log Out" onAction="#handleLogout" styleClass="sidebar-button-danger">
                    <graphic>
                        <javafx.scene.shape.SVGPath content="M10.09 15.59L11.5 17l5-5-5-5-1.41 1.41L12.67 11H3v2h9.67l-2.58 2.59zM19 3H5c-1.11 0-2 .9-2 2v4h2V5h14v14H5v-4H3v4c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z" styleClass="sidebar-icon"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </left>


    <center>
        <VBox style="-fx-padding: 30; -fx-background-color: transparent;" spacing="20">
            <VBox spacing="5">
                <Label text="Overview" styleClass="header-text"/>
                <Label text="Key system metrics and status" styleClass="sub-header-text"/>
            </VBox>

            <!-- Stats Grid -->
            <FlowPane hgap="20" vgap="20" prefWrapLength="800">
                
                <!-- Users Card -->
                <VBox style="-fx-background-color: -color-card-bg; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" minWidth="220">
                     <Label text="Total Users" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 14px;"/>
                     <Label fx:id="totalUsersLabel" text="Loading..." style="-fx-text-fill: -color-text-primary; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Volume Card -->
                <VBox style="-fx-background-color: -color-card-bg; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" minWidth="220">
                     <Label text="Total Transaction Volume" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 14px;"/>
                     <Label fx:id="totalVolumeLabel" text="Loading..." style="-fx-text-fill: -color-text-primary; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Tickets Card -->
                <VBox style="-fx-background-color: -color-card-bg; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" minWidth="220">
                     <Label text="Open Support Tickets" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 14px;"/>
                     <Label fx:id="openTicketsLabel" text="Loading..." style="-fx-text-fill: -color-text-primary; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- System Health Card -->
                 <VBox style="-fx-background-color: -color-card-bg; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" minWidth="220">
                     <Label text="System Status" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 14px;"/>
                     <Label fx:id="systemHealthLabel" text="Unknown" style="-fx-text-fill: -color-text-muted; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

            </FlowPane>
        </VBox>
    </center>

</BorderPane>
