<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.finhub.controller.AdminDashboardController"
            style="-fx-background-color: transparent;">

    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebar" id="mainSidebar" spacing="10" styleClass="sidebar" prefWidth="60" alignment="TOP_CENTER">
            
            <!-- User Profile & Toggle -->
            <HBox fx:id="sidebarHeader" alignment="CENTER_LEFT" spacing="10" minHeight="50">
                <VBox fx:id="userInfoBox" alignment="CENTER_LEFT" styleClass="user-info-box">
                    <Label fx:id="userNameLabel" text="FinHub" styleClass="user-name-label"/>
                    <Label fx:id="userRoleLabel" text="%common.role.admin" styleClass="user-role-label"/>
                </VBox>
                <Region fx:id="headerSpacer" HBox.hgrow="ALWAYS"/>
                <Button onAction="#toggleSidebar" styleClass="button-icon" minWidth="30" minHeight="30">
                    <graphic>
                        <SVGPath content="M3 6h18v2H3V6zm0 5h18v2H3v-2zm0 5h18v2H3v-2z" styleClass="sidebar-icon"/>
                    </graphic>
                </Button>
            </HBox>
            
            <Region fx:id="menuSpacer" VBox.vgrow="ALWAYS" minHeight="20"/>
            
            <Label fx:id="menuLabel" text="MENU" styleClass="menu-label"/>
            
            <Button fx:id="btnDashboard" text="%sidebar.dashboard" onAction="#handleGoToDashboard" maxWidth="Infinity" styleClass="sidebar-button">
                 <graphic>
                    <SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" styleClass="sidebar-icon"/>
                 </graphic>
            </Button>
            
            <Button fx:id="btnUsers" text="%sidebar.users" onAction="#handleGoToUsers" maxWidth="Infinity" styleClass="sidebar-button">
                 <graphic>
                    <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" styleClass="sidebar-icon"/>
                 </graphic>
            </Button>
            
            <Button fx:id="btnTransactions" text="%sidebar.transactions" onAction="#handleGoToTransactions" maxWidth="Infinity" styleClass="sidebar-button">
                 <graphic>
                    <SVGPath content="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" styleClass="sidebar-icon"/>
                 </graphic>
            </Button>
            
            <Button fx:id="btnEscrows" text="%sidebar.escrows" onAction="#handleGoToEscrows" maxWidth="Infinity" styleClass="sidebar-button">
                 <graphic>
                    <SVGPath content="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z" styleClass="sidebar-icon"/>
                 </graphic>
            </Button>
            
            <Button fx:id="btnSupportHub" text="Support &amp; Safety" onAction="#handleGoToSupportHub" maxWidth="Infinity" styleClass="sidebar-button">
                 <graphic>
                    <SVGPath content="M12 1a9 9 0 0 0-9 9v7c0 1.66 1.34 3 3 3h3v-8H5v-2c0-3.87 3.13-7 7-7s7 3.13 7 7v2h-4v8h3c1.66 0 3-1.34 3-3v-7a9 9 0 0 0-9-9z" styleClass="sidebar-icon"/>
                 </graphic>
            </Button>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <HBox alignment="CENTER">
                <Button fx:id="btnLogout" text="%sidebar.logout" onAction="#handleLogout" styleClass="sidebar-button-danger">
                    <graphic>
                        <SVGPath content="M10.09 15.59L11.5 17l5-5-5-5-1.41 1.41L12.67 11H3v2h9.67l-2.58 2.59zM19 3H5c-1.11 0-2 .9-2 2v4h2V5h14v14H5v-4H3v4c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z" styleClass="sidebar-icon"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </left>


    <center>
        <StackPane fx:id="adminContentArea" id="adminContentArea"/>
    </center>

</BorderPane>
