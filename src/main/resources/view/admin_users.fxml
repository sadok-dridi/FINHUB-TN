<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.finhub.controller.AdminUserController"
            style="-fx-background-color: transparent;">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: -color-card-bg; -fx-padding: 25 5 25 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0); -fx-border-color: transparent -color-card-border transparent transparent; -fx-border-width: 0 1 0 0;" prefWidth="200">
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 0 10;">
                <Circle radius="15" fill="#2D2A40"/>
                <VBox>
                    <Label text="FinHub Admin" style="-fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                    <Label text="Users" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 11px;"/>
                </VBox>
            </HBox>
            <Region prefHeight="30"/>
            <Label text="MAIN" style="-fx-text-fill: -color-text-muted; -fx-font-size: 10px; -fx-font-weight: bold; -fx-padding: 0 0 0 10;"/>
            <Button text="Dashboard" onAction="#handleGoToDashboard" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Users" maxWidth="Infinity" styleClass="sidebar-button" style="-fx-background-color: -color-primary; -fx-text-fill: white;"/>
            <Button text="Transactions" onAction="#handleGoToTransactions" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Escrows" onAction="#handleGoToEscrows" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Support" onAction="#handleGoToSupport" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Alerts" onAction="#handleGoToAlerts" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Region VBox.vgrow="ALWAYS"/>
            <HBox alignment="CENTER">
                <Button text="Log Out" onAction="#handleLogout" styleClass="sidebar-button-danger">
                    <graphic>
                        <javafx.scene.shape.SVGPath content="M10.09 15.59L11.5 17l5-5-5-5-1.41 1.41L12.67 11H3v2h9.67l-2.58 2.59zM19 3H5c-1.11 0-2 .9-2 2v4h2V5h14v14H5v-4H3v4c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z" styleClass="sidebar-icon"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </left>


    <center>
        <VBox style="-fx-padding: 30; -fx-background-color: transparent;" spacing="20">
            <VBox spacing="5">
                <Label text="User Management" styleClass="header-text"/>
                <Label text="Manage and view all registered users" styleClass="sub-header-text"/>
            </VBox>

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
                <TextField fx:id="searchField" promptText="Search users..." prefWidth="300" styleClass="search-field"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleRefresh" styleClass="button-icon" text="Refresh">
                    <graphic>
                        <javafx.scene.shape.SVGPath content="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z" style="-fx-fill: -color-text-secondary;"/>
                    </graphic>
                </Button>
            </HBox>

            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                <content>
                    <FlowPane fx:id="usersContainer" hgap="20" vgap="20" style="-fx-padding: 10;"/>
                </content>
            </ScrollPane>

        </VBox>
    </center>

</BorderPane>
