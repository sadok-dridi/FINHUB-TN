<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.finhub.controller.TransactionsController"
      spacing="20" style="-fx-background-color: transparent;">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Quick Send Section -->
    <VBox spacing="10">
        <HBox alignment="CENTER_LEFT" spacing="15">
             <Label text="Quick Send" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
             <Region HBox.hgrow="ALWAYS"/>
             <javafx.scene.control.Button text="Add Contact" onAction="#handleAddContact" 
                    style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 5 10; -fx-cursor: hand; -fx-font-size: 12px;"/>
        </HBox>
        
        <ScrollPane fitToHeight="true" vbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-width: 0;">
            <content>
                <javafx.scene.layout.HBox fx:id="contactsContainer" spacing="15" style="-fx-background-color: transparent; -fx-padding: 5;">
                </javafx.scene.layout.HBox>
            </content>
        </ScrollPane>
    </VBox>

    <javafx.scene.control.Separator style="-fx-background-color: #374151;"/>

    <!-- Header -->
    <Label text="Transaction History" 
           style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);"/>

    <!-- Scrollable Transaction List -->
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-width: 0;" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="transactionContainer" spacing="12" style="-fx-background-color: transparent;">
                <padding>
                    <Insets right="10" bottom="10"/> <!-- Padding for scrollbar buffer -->
                </padding>
            </VBox>
        </content>
    </ScrollPane>

</VBox>
