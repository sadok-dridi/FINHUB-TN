<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="tn.finhub.controller.CreateTicketController"
      styleClass="dialog-root" style="-fx-min-width: 450;">

    <!-- Custom Window Header -->
    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="dialog-header">
        <Label text="%support.ticket.create.title" styleClass="dialog-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button styleClass="window-close-button" onAction="#handleCancel">
            <graphic>
                <SVGPath content="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" style="-fx-fill: -color-text-secondary;" scaleX="0.8" scaleY="0.8"/>
            </graphic>
        </Button>
    </HBox>

    <VBox spacing="15" styleClass="dialog-content">
        <VBox spacing="5">
            <Label text="%support.ticket.subject" styleClass="label-bold" style="-fx-text-fill: -color-text-secondary;"/>
            <TextField fx:id="subjectField" promptText="%support.ticket.subject.placeholder"/>
        </VBox>
        
        <VBox spacing="5">
            <Label text="%support.ticket.category" styleClass="label-bold" style="-fx-text-fill: -color-text-secondary;"/>
            <ComboBox fx:id="categoryCombo" maxWidth="Infinity"/>
        </VBox>
        
        <VBox spacing="5">
            <Label text="%support.ticket.description" styleClass="label-bold" style="-fx-text-fill: -color-text-secondary;"/>
            <TextArea fx:id="messageArea" promptText="%support.ticket.description.placeholder" wrapText="true" prefRowCount="5"/>
        </VBox>
        
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button text="%common.cancel" onAction="#handleCancel" styleClass="button-subtle"/>
            <Button text="%support.ticket.submit" onAction="#handleSubmit" styleClass="button-primary"/>
        </HBox>
    </VBox>

</VBox>
