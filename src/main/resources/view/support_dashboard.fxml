<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="tn.finhub.controller.SupportDashboardController"
      spacing="20" style="-fx-padding: 30;">

    <VBox spacing="5" alignment="CENTER">
        <Label text="Help &amp; Support Center" styleClass="page-title"/>
        <Label text="Get help from our AI Assistant, manage tickets, or view system alerts." styleClass="text-muted"/>
    </VBox>

    <!-- Custom Centered Navigation -->
    <HBox alignment="CENTER" spacing="15" styleClass="nav-button-container">
        <ToggleButton fx:id="btnAiAssistant" text="AI Assistant" styleClass="nav-button" selected="true">
            <graphic>
                <SVGPath content="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z" styleClass="nav-icon"/>
            </graphic>
        </ToggleButton>
        
        <ToggleButton fx:id="btnMyTickets" text="My Tickets" styleClass="nav-button">
            <graphic>
                 <SVGPath content="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" styleClass="nav-icon"/>
            </graphic>
        </ToggleButton>
        
        <ToggleButton fx:id="btnSystemAlerts" text="System Alerts" styleClass="nav-button">
            <graphic>
                <SVGPath content="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2zm6-6v-5c0-3.07-1.63-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.64 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2zm-2 1H8v-6c0-2.48 1.51-4.5 4-4.5s4 2.02 4 4.5v6z" styleClass="nav-icon"/>
            </graphic>
        </ToggleButton>
        
        <ToggleButton fx:id="btnKnowledgeBase" text="Knowledge Base" styleClass="nav-button">
             <graphic>
                <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z" styleClass="nav-icon"/>
            </graphic>
        </ToggleButton>
    </HBox>

    <!-- Content Area -->
    <StackPane VBox.vgrow="ALWAYS">
        <fx:include fx:id="viewAiAssistant" source="support_chat.fxml"/>
        <fx:include fx:id="viewMyTickets" source="support_tickets.fxml" visible="false"/>
        <fx:include fx:id="viewSystemAlerts" source="support_alerts.fxml" visible="false"/>
        <fx:include fx:id="viewKnowledgeBase" source="support_kb.fxml" visible="false"/>
    </StackPane>
</VBox>
