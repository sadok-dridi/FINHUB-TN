<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.finhub.controller.AddContactController"
      style="-fx-background-color: #1F2937; -fx-padding: 30; -fx-background-radius: 12; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 12;" 
      prefWidth="400" spacing="20">

    <Label text="Add New Contact" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>

    <VBox spacing="10">
        <Label text="Email" style="-fx-text-fill: #D1D5DB; -fx-font-size: 14px;"/>
        <TextField fx:id="emailField" promptText="Enter recipient email (e.g. user@finhub.tn)" 
                   style="-fx-background-color: #374151; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 8;"/>
    </VBox>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-border-color: #4B5563; -fx-border-radius: 6; -fx-cursor: hand;"/>
        <Button text="Save Contact" onAction="#handleSave"
                style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-cursor: hand;"/>
    </HBox>

</VBox>
