<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.finhub.controller.AdminUserTransactionsController"
            style="-fx-background-color: transparent;">



    <center>
        <VBox style="-fx-padding: 30 30 0 30; -fx-background-color: transparent;" spacing="20">
            
            <!-- Back & Header -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                 <Button text="Back" onAction="#handleBack" styleClass="button-back">
                    <graphic>
                        <javafx.scene.shape.SVGPath content="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" style="-fx-fill: -color-text-secondary;"/>
                    </graphic>
                 </Button>
                 <Label text="%admin.transactions.ledger" styleClass="header-text"/>
            </HBox>

            <!-- User Info Summary -->
             <HBox spacing="20" style="-fx-background-color: -color-card-bg; -fx-padding: 20; -fx-background-radius: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <VBox spacing="5">
                    <Label text="%common.user" style="-fx-text-fill: -color-text-muted; -fx-font-size: 12px;"/>
                    <Label fx:id="nameLabel" text="%common.loading" style="-fx-font-weight: bold;"/>
                    <Label fx:id="emailLabel" text="%common.loading" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox spacing="5">
                    <Label text="%wallet.balance" style="-fx-text-fill: -color-text-muted; -fx-font-size: 12px;"/>
                    <Label fx:id="balanceLabel" text="0.00" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: -color-primary;"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox spacing="5">
                    <Label text="%common.status" style="-fx-text-fill: -color-text-muted; -fx-font-size: 12px;"/>
                    <Label fx:id="walletStatusLabel" text="Active" style="-fx-font-weight: bold;"/>
                </VBox>
             </HBox>

            <!-- Alert Box -->
            <VBox fx:id="ledgerAlertBox" managed="false" visible="false" style="-fx-background-color: rgba(239, 68, 68, 0.1); -fx-border-color: #EF4444; -fx-border-radius: 8px; -fx-padding: 15;">
                <HBox spacing="10" alignment="CENTER_LEFT">
                     <Label text="%common.security.alert" style="-fx-text-fill: #EF4444; -fx-font-weight: bold;"/>
                     <Label fx:id="ledgerAlertMessage" text="Details..." style="-fx-text-fill: #EF4444;"/>
                </HBox>
                <Label text="%admin.transactions.tamper.alert" style="-fx-text-fill: #EF4444; -fx-font-size: 12px;" wrapText="true"/>
            </VBox>

            <!-- Transactions List -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="%escrow.filter.history" style="-fx-font-weight: bold; -fx-text-fill: -color-text-secondary;"/>
                <ListView fx:id="transactionsListView" styleClass="transaction-list" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;"/>
            </VBox>
            
        </VBox>
    </center>

</BorderPane>
