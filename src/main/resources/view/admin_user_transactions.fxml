<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.finhub.controller.AdminUserTransactionsController"
            style="-fx-background-color: transparent;">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: -color-card-bg; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0); -fx-border-color: transparent -color-card-border transparent transparent; -fx-border-width: 0 1 0 0;" prefWidth="250">
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Circle radius="20" fill="#2D2A40"/>
                <VBox>
                    <Label text="Admin Dashboard" style="-fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                    <Label text="Administrator" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
                </VBox>
            </HBox>
            
            <Region prefHeight="30"/>
            
            <Label text="ADMINISTRATION" style="-fx-text-fill: -color-text-muted; -fx-font-size: 10px; -fx-font-weight: bold;"/>
            
            <Button text="Users" onAction="#handleGoToUsers" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Transactions" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: -color-primary; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Analytics" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Settings" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            <!-- Logout omitted for brevity in child view -->
        </VBox>
    </left>

    <center>
        <VBox style="-fx-padding: 30 30 0 30; -fx-background-color: transparent;" spacing="20">
            
            <!-- Back & Header -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                 <Button text="← Back" onAction="#handleBack" styleClass="button-text" style="-fx-text-fill: -color-text-secondary;"/>
                 <Label text="Transaction Ledger" styleClass="header-text"/>
            </HBox>

            <!-- User Info Summary -->
             <HBox spacing="20" style="-fx-background-color: -color-card-bg; -fx-padding: 20; -fx-background-radius: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <VBox spacing="5">
                    <Label text="User" style="-fx-text-fill: -color-text-muted; -fx-font-size: 12px;"/>
                    <Label fx:id="nameLabel" text="Loading..." style="-fx-font-weight: bold;"/>
                    <Label fx:id="emailLabel" text="Loading..." style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox spacing="5">
                    <Label text="Balance" style="-fx-text-fill: -color-text-muted; -fx-font-size: 12px;"/>
                    <Label fx:id="balanceLabel" text="0.00" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: -color-primary;"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox spacing="5">
                    <Label text="Status" style="-fx-text-fill: -color-text-muted; -fx-font-size: 12px;"/>
                    <Label fx:id="walletStatusLabel" text="Active" style="-fx-font-weight: bold;"/>
                </VBox>
             </HBox>

            <!-- Alert Box -->
            <VBox fx:id="ledgerAlertBox" managed="false" visible="false" style="-fx-background-color: rgba(239, 68, 68, 0.1); -fx-border-color: #EF4444; -fx-border-radius: 8px; -fx-padding: 15;">
                <HBox spacing="10" alignment="CENTER_LEFT">
                     <Label text="⚠ SECURITY ALERT:" style="-fx-text-fill: #EF4444; -fx-font-weight: bold;"/>
                     <Label fx:id="ledgerAlertMessage" text="Details..." style="-fx-text-fill: #EF4444;"/>
                </HBox>
                <Label text="A transaction may have been tampered with. The ledger is broken. Locate the violation (red) below and correct it." style="-fx-text-fill: #EF4444; -fx-font-size: 12px;" wrapText="true"/>
            </VBox>

            <!-- Transactions List -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="History" style="-fx-font-weight: bold; -fx-text-fill: -color-text-secondary;"/>
                <ListView fx:id="transactionsListView" styleClass="transaction-list" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;"/>
            </VBox>
            
        </VBox>
    </center>

</BorderPane>
