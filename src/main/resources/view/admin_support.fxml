<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.finhub.controller.AdminSupportController"
            style="-fx-background-color: transparent;">

    <left>
        <VBox spacing="10" style="-fx-background-color: -color-card-bg; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0); -fx-border-color: transparent -color-card-border transparent transparent; -fx-border-width: 0 1 0 0;" prefWidth="250">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Circle radius="20" fill="#2D2A40"/>
                <VBox>
                    <Label text="FinHub Admin" style="-fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                    <Label text="Support" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
                </VBox>
            </HBox>
            <Region prefHeight="30"/>
            <Label text="MAIN" style="-fx-text-fill: -color-text-muted; -fx-font-size: 10px; -fx-font-weight: bold;"/>
            <Button text="Dashboard" onAction="#handleGoToDashboard" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Users" onAction="#handleGoToUsers" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Transactions" onAction="#handleGoToTransactions" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Support" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: -color-primary; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Alerts" onAction="#handleGoToAlerts" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Log Out" onAction="#handleLogout" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-error; -fx-padding: 10; -fx-cursor: hand;"/>
        </VBox>
    </left>


    <center>
        <HBox style="-fx-padding: 30; -fx-background-color: transparent;" spacing="20">
            <!-- Ticket List -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT">
                    <Label text="All Tickets" styleClass="header-text"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Refresh" onAction="#handleRefresh" styleClass="button-outlined-secondary"/>
                </HBox>
                <TableView fx:id="ticketsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colSubject" text="Subject" prefWidth="200"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                        <TableColumn fx:id="colPriority" text="Priority" prefWidth="80"/>
                        <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Ticket Details / Reply Area -->
            <VBox fx:id="chatArea" spacing="10" prefWidth="400" style="-fx-background-color: -color-card-bg; -fx-padding: 20; -fx-background-radius: 12;">
                 <Label fx:id="ticketTitleLabel" text="Select a Ticket" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: -color-text-primary;"/>
                 
                 <Region VBox.vgrow="ALWAYS" /> <!-- Chat messages viewer would go here -->
                 
                 <Label text="Reply as Admin:" style="-fx-text-fill: -color-text-secondary;"/>
                 <TextArea fx:id="replyArea" prefRowCount="4" wrapText="true" promptText="Type your reply here..."/>
                 
                 <HBox spacing="10" alignment="CENTER_RIGHT">
                     <Button fx:id="closeTicketButton" text="Resolve Ticket" onAction="#handleCloseTicket" style="-fx-background-color: -color-warning; -fx-text-fill: white;"/>
                     <Button fx:id="sendButton" text="Send Reply" onAction="#handleSendReply" styleClass="button-primary"/>
                 </HBox>
            </VBox>
        </HBox>
    </center>

</BorderPane>
