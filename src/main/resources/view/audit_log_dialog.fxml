<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="tn.finhub.controller.AuditLogController"
      style="-fx-padding: 20; -fx-background-color: #F3F4F6; -fx-background-radius: 10; -fx-border-color: #E5E7EB; -fx-border-width: 1;">
    
    <Label text="Verification History" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #111827;"/>
    
    <TableView fx:id="logTable" prefHeight="400" prefWidth="600" style="-fx-background-radius: 8; -fx-border-radius: 8;">
        <columns>
            <TableColumn fx:id="dateCol" text="Date" prefWidth="150"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="80"/>
            <TableColumn fx:id="messageCol" text="Detail" prefWidth="350"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#handleClose" 
                style="-fx-background-color: white; -fx-text-fill: #374151; -fx-border-color: #D1D5DB; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 5 15;"/>
    </HBox>
</VBox>
