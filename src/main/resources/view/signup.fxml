<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="tn.finhub.controller.SignupController"
           style="-fx-background-color: transparent;">

    <VBox alignment="CENTER" spacing="20" maxWidth="400" maxHeight="600" styleClass="card">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <Label text="Create Account" styleClass="header-text"/>
        <Label text="Join FinHub today" styleClass="sub-header-text"/>
        
        <Region prefHeight="10"/>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Full Name" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <TextField fx:id="nameField" promptText="Full name" styleClass="text-field"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Email Address" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <TextField fx:id="emailField" promptText="name@company.com" styleClass="text-field"/>
        </VBox>



        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Password" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="text-field"/>
        </VBox>
        
        <Region prefHeight="10"/>

        <Button text="Sign Up" onAction="#handleSignup" maxWidth="Infinity" styleClass="button-primary"/>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" style="-fx-text-fill: -color-text-secondary;"/>
            <Hyperlink text="Sign in" onAction="#goToLogin" styleClass="hyperlink"/>
        </HBox>

        <Label fx:id="messageLabel" textFill="#ef4444"/>

    </VBox>

</StackPane>
