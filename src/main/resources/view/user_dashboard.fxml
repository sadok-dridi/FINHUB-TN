<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.finhub.controller.UserDashboardController"
            style="-fx-background-color: transparent;">

    <left>
        <VBox fx:id="sidebar" spacing="10" styleClass="sidebar" prefWidth="280">
            
            <!-- User Profile & Toggle -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 0 0 20 0;">
                <VBox alignment="CENTER_LEFT">
                    <Label fx:id="userNameLabel" text="User" style="-fx-font-weight: bold; -fx-text-fill: -color-text-primary; -fx-font-size: 16px;"/>
                    <Label fx:id="userRoleLabel" text="Role" style="-fx-text-fill: -color-primary; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button onAction="#toggleSidebar" styleClass="button-icon">
                    <graphic>
                        <javafx.scene.shape.SVGPath content="M3 6h18 M3 12h18 M3 18h18" styleClass="sidebar-icon"/>
                    </graphic>
                </Button>
            </HBox>
            
            <Region prefHeight="20"/>
            
            <Label fx:id="menuLabel" text="MENU" style="-fx-text-fill: -color-text-muted; -fx-font-size: 10px; -fx-font-weight: bold;"/>
            
            <!-- Dashboard (Wallet) -->
            <Button fx:id="btnDashboard" text="Dashboard" maxWidth="Infinity" styleClass="sidebar-button">
                <graphic>
                    <javafx.scene.shape.SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" styleClass="sidebar-icon"/>
                </graphic>
            </Button>

            <!-- Transactions -->
            <Button fx:id="btnTransactions" text="Transactions" maxWidth="Infinity" styleClass="sidebar-button">
                <graphic>
                    <javafx.scene.shape.SVGPath content="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" styleClass="sidebar-icon"/>
                </graphic>
            </Button>

            <!-- Escrow -->
            <Button fx:id="btnEscrow" text="Escrow &amp; Trust" maxWidth="Infinity" styleClass="sidebar-button">
                <graphic>
                    <javafx.scene.shape.SVGPath content="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z" styleClass="sidebar-icon"/>
                </graphic>
            </Button>

            <!-- Simulation -->
            <Button fx:id="btnSimulation" text="Financial Twin" maxWidth="Infinity" styleClass="sidebar-button">
                <graphic>
                    <javafx.scene.shape.SVGPath content="M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6z" styleClass="sidebar-icon"/>
                </graphic>
            </Button>

            <!-- Support -->
            <Button fx:id="btnSupport" text="Smart Support" maxWidth="Infinity" styleClass="sidebar-button">
                <graphic>
                    <javafx.scene.shape.SVGPath content="M20 2H4c-1.1 0-1.99.9-1.99 2L2 22l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-7 12h-2v-2h2v2zm0-4h-2V7h2v3z" styleClass="sidebar-icon"/>
                </graphic>
            </Button>

            <!-- Settings -->
            <Button fx:id="btnSettings" text="Settings" maxWidth="Infinity" styleClass="sidebar-button">
                <graphic>
                    <javafx.scene.shape.SVGPath content="M19.14 12.94c.04-.3.06-.61.06-.94 0-.32-.02-.64-.07-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L5.09 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.05.3-.09.63-.09.94s.02.64.07.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z" styleClass="sidebar-icon"/>
                </graphic>
            </Button>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <Button fx:id="btnLogout" text="Log Out" onAction="#handleLogout" maxWidth="Infinity" styleClass="sidebar-button-danger">
                <graphic>
                    <javafx.scene.shape.SVGPath content="M10.09 15.59L11.5 17l5-5-5-5-1.41 1.41L12.67 11H3v2h9.67l-2.58 2.59zM19 3H5c-1.11 0-2 .9-2 2v4h2V5h14v14H5v-4H3v4c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z" styleClass="sidebar-icon"/>
                </graphic>
            </Button>
        </VBox>
    </left>


    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: transparent;">
                    
                    <Label text="Overview" styleClass="header-text"/>
                    
                    <HBox spacing="20">
                        <VBox styleClass="card" HBox.hgrow="ALWAYS">
                            <Label text="Total Balance" styleClass="sub-header-text"/>
                            <Label text="\$12,450.00" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                            <Label text="+2.5% vs last month" style="-fx-text-fill: -color-success; -fx-font-size: 12px;"/>
                        </VBox>
                        
                        <VBox styleClass="card" HBox.hgrow="ALWAYS">
                            <Label text="Active Cards" styleClass="sub-header-text"/>
                            <Label text="2" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                        </VBox>
                    </HBox>
                    
                    <Label text="Recent Transactions" styleClass="header-text" style="-fx-font-size: 18px;"/>
                    
                    <VBox styleClass="card" spacing="15">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Circle radius="15" fill="#2D2A40"/>
                            <VBox>
                                <Label text="Netflix Subscription" style="-fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                                <Label text="Entertainment" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
                            </VBox>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="-\$15.00" style="-fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
<!-- ... -->
                            <Label text="-\$9.99" style="-fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                        </HBox>
                    </VBox>
                    
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
