<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      alignment="CENTER" spacing="20" 
      style="-fx-background-color: transparent; -fx-padding: 40;"
      minHeight="400">

    <VBox alignment="CENTER" spacing="10">
        <Label text="Link Telegram" styleClass="header-text" style="-fx-font-size: 24px;"/>
        <Label text="Connect your Telegram account to start scanning receipts automatically." 
               styleClass="text-primary" wrapText="true" maxWidth="400" textAlignment="CENTER"/>
    </VBox>

    <VBox spacing="15" maxWidth="500" style="-fx-background-color: rgba(30, 27, 46, 0.6); -fx-background-radius: 12; -fx-padding: 30; -fx-border-color: rgba(139, 92, 246, 0.3); -fx-border-width: 1; -fx-border-radius: 12;">
        <Label text="Instructions:" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #A78BFA;"/>
        
        <VBox spacing="12">
            <Label text="1. Open Telegram and find @Finhub_tn_bot" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <Label text="2. Send your registered email address to the bot." style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <Label text="3. Once confirmed by the bot, click the button below." style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </VBox>

    <Button text="I Have Linked My Account" onAction="#handleRefreshLinkStatus"
            styleClass="button-primary" prefWidth="250"/>

</VBox>
