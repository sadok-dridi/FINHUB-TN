<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx"
           fx:controller="tn.finhub.controller.CompleteProfileController"
           style="-fx-background-color: transparent;">

    <VBox alignment="CENTER" spacing="20" maxWidth="450" maxHeight="650" styleClass="card">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <Label text="Complete Profile" styleClass="header-text"/>
        <Label text="Tailor your financial experience" styleClass="sub-header-text"/>

        <Region prefHeight="10"/>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Monthly Income" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <TextField fx:id="incomeField" promptText="e.g. 2500.00" styleClass="text-field"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Monthly Expenses" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <TextField fx:id="expensesField" promptText="e.g. 1200.00" styleClass="text-field"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Savings Goal" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <TextField fx:id="savingsField" promptText="e.g. 10000.00" styleClass="text-field"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Risk Tolerance" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <ComboBox fx:id="riskBox" maxWidth="Infinity" promptText="Select Risk Level" styleClass="combo-box"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Currency" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <ComboBox fx:id="currencyBox" maxWidth="Infinity" promptText="Select Currency" styleClass="combo-box"/>
        </VBox>

        <Region prefHeight="10"/>

        <Button text="Save &amp; Continue" onAction="#handleSaveProfile" maxWidth="Infinity" styleClass="button-primary"/>
        
        <Label fx:id="errorLabel" textFill="#ef4444" wrapText="true" textAlignment="CENTER"/>

    </VBox>

</StackPane>
