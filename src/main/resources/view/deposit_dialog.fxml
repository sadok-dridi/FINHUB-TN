<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

   <VBox spacing="25.0" styleClass="deposit-dialog" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.finhub.controller.DepositController">
      <children>
         <HBox alignment="CENTER_LEFT" spacing="10.0">
             <VBox spacing="5.0" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                 <Label text="%deposit.title" styleClass="header-text"/>
                 <Label text="%deposit.subtitle" styleClass="sub-header-text"/>
             </VBox>
             <javafx.scene.shape.SVGPath content="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" styleClass="window-close-icon" onMouseClicked="#handleCancel"/>
         </HBox>
         
         <VBox spacing="10.0">
            <Label text="%deposit.amount" styleClass="section-label"/>
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="amount-input-container">
                <Label text="TND" styleClass="currency-label"/>
                <TextField fx:id="amountField" promptText="0.00" styleClass="amount-field-large" HBox.hgrow="ALWAYS"/>
            </HBox>
         </VBox>
   
         <VBox spacing="10.0">
            <Label text="%deposit.card.details" styleClass="section-label"/>
            <VBox spacing="15" styleClass="card-form-container">
                <TextField fx:id="cardNumberField" promptText="Card Number" styleClass="text-field"/>
                <HBox spacing="15">
                    <TextField fx:id="expiryField" promptText="MM/YY" styleClass="text-field" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="cvvField" promptText="CVV" styleClass="text-field" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
         </VBox>
         
         <HBox spacing="15.0" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
             <Button fx:id="cancelButton" text="%common.cancel" onAction="#handleCancel" styleClass="button-text-secondary"/>
             <Button fx:id="payButton" text="%deposit.confirm.button" onAction="#handleDeposit" styleClass="button-primary"/>
         </HBox>
      </children>
   </VBox>
