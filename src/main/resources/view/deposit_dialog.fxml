<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

   <VBox spacing="25.0" styleClass="deposit-dialog" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.finhub.controller.DepositController">
      <children>
         <HBox alignment="CENTER_LEFT" spacing="10.0">
             <VBox spacing="5.0" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                 <Label text="%deposit.title" styleClass="header-text"/>
                 <Label text="Secure Plaid Bank Verification" styleClass="sub-header-text"/>
             </VBox>
             <javafx.scene.shape.SVGPath content="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" styleClass="window-close-icon" onMouseClicked="#handleCancel"/>
         </HBox>
         
         <VBox spacing="10.0">
            <Label text="Amount to Pull from Bank" styleClass="section-label"/>
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="amount-input-container">
                <Label text="TND" styleClass="currency-label"/>
                <TextField fx:id="amountField" promptText="0.00" styleClass="amount-field-large" HBox.hgrow="ALWAYS"/>
            </HBox>
         </VBox>
   
         <VBox spacing="10.0" alignment="CENTER">
            <Label text="Click below to securely connect to your bank via Plaid API Sandbox." styleClass="sub-header-text" style="-fx-text-fill: #9CA3AF; -fx-wrap-text: true; -fx-text-alignment: center;"/>
         </VBox>
         
         <HBox spacing="15.0" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
             <Button fx:id="cancelButton" text="%common.cancel" onAction="#handleCancel" styleClass="button-text-secondary"/>
             <Button fx:id="payButton" text="Link Bank Account" onAction="#handleDeposit" styleClass="button-primary" style="-fx-background-color: #111827; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
         </HBox>
      </children>
   </VBox>
