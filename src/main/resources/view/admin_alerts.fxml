<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.finhub.controller.AdminAlertsController"
            style="-fx-background-color: transparent;">

    <left>
        <VBox spacing="10" style="-fx-background-color: -color-card-bg; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0); -fx-border-color: transparent -color-card-border transparent transparent; -fx-border-width: 0 1 0 0;" prefWidth="250">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Circle radius="20" fill="#2D2A40"/>
                <VBox>
                    <Label text="FinHub Admin" style="-fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                    <Label text="Alerts" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
                </VBox>
            </HBox>
            <Region prefHeight="30"/>
            <Label text="MAIN" style="-fx-text-fill: -color-text-muted; -fx-font-size: 10px; -fx-font-weight: bold;"/>
            <Button text="Dashboard" onAction="#handleGoToDashboard" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Users" onAction="#handleGoToUsers" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Transactions" onAction="#handleGoToTransactions" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Escrows" onAction="#handleGoToEscrows" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Support" onAction="#handleGoToSupport" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-text-secondary; -fx-padding: 10; -fx-cursor: hand;"/>
            <Button text="Alerts" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: -color-primary; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 10; -fx-cursor: hand;"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Log Out" onAction="#handleLogout" maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-background-color: transparent; -fx-text-fill: -color-error; -fx-padding: 10; -fx-cursor: hand;"/>
        </VBox>
    </left>


    <center>
        <VBox style="-fx-padding: 30; -fx-background-color: transparent;" spacing="20">
            <VBox spacing="5">
                <Label text="System Broadcast" styleClass="header-text"/>
                <Label text="Send alerts to all users" styleClass="sub-header-text"/>
            </VBox>
            
            <VBox style="-fx-background-color: -color-card-bg; -fx-padding: 30; -fx-background-radius: 12; -fx-max-width: 600;" spacing="15">
                
                <Label text="Severity Level" style="-fx-text-fill: -color-text-secondary;"/>
                <ComboBox fx:id="severityBox" prefWidth="200" styleClass="combo-box"/>
                
                <Label text="Source Name" style="-fx-text-fill: -color-text-secondary;"/>
                <TextField fx:id="sourceField" styleClass="text-field"/>
                
                <Label text="Message" style="-fx-text-fill: -color-text-secondary;"/>
                <TextArea fx:id="messageArea" prefRowCount="4" wrapText="true" styleClass="text-area"/>
                
                <Region prefHeight="10"/>
                
                <Button text="Broadcast Alert" onAction="#handleBroadcast" styleClass="button-primary" maxWidth="Infinity"/>
                
            </VBox>
            
        </VBox>
    </center>

</BorderPane>
