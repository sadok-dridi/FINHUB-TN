<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.finhub.controller.AdminAlertsController"
            style="-fx-background-color: transparent;">

    <left>
        <VBox spacing="10" style="-fx-background-color: -color-card-bg; -fx-padding: 25 5 25 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0); -fx-border-color: transparent -color-card-border transparent transparent; -fx-border-width: 0 1 0 0;" prefWidth="200">
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 0 10;">
                <Circle radius="15" fill="#2D2A40"/>
                <VBox>
                    <Label text="FinHub Admin" style="-fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                    <Label text="Alerts" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 11px;"/>
                </VBox>
            </HBox>
            <Region prefHeight="30"/>
            <Label text="MAIN" style="-fx-text-fill: -color-text-muted; -fx-font-size: 10px; -fx-font-weight: bold; -fx-padding: 0 0 0 10;"/>
            <Button text="Dashboard" onAction="#handleGoToDashboard" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Users" onAction="#handleGoToUsers" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Transactions" onAction="#handleGoToTransactions" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Escrows" onAction="#handleGoToEscrows" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Support" onAction="#handleGoToSupport" maxWidth="Infinity" styleClass="sidebar-button"/>
            <Button text="Alerts" maxWidth="Infinity" styleClass="sidebar-button" style="-fx-background-color: -color-primary; -fx-text-fill: white;"/>
            <Region VBox.vgrow="ALWAYS"/>
            <HBox alignment="CENTER">
                <Button text="Log Out" onAction="#handleLogout" styleClass="sidebar-button-danger">
                    <graphic>
                        <javafx.scene.shape.SVGPath content="M10.09 15.59L11.5 17l5-5-5-5-1.41 1.41L12.67 11H3v2h9.67l-2.58 2.59zM19 3H5c-1.11 0-2 .9-2 2v4h2V5h14v14H5v-4H3v4c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z" styleClass="sidebar-icon"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </left>


    <center>
        <VBox style="-fx-padding: 30; -fx-background-color: transparent;" spacing="20">
            <VBox spacing="5">
                <Label text="System Broadcast" styleClass="header-text"/>
                <Label text="Send alerts to all users" styleClass="sub-header-text"/>
            </VBox>
            
            <VBox style="-fx-background-color: -color-card-bg; -fx-padding: 30; -fx-background-radius: 12; -fx-max-width: 600;" spacing="15">
                
                <Label text="Severity Level" style="-fx-text-fill: -color-text-secondary;"/>
                <ComboBox fx:id="severityBox" prefWidth="200" styleClass="combo-box"/>
                
                <Label text="Source Name" style="-fx-text-fill: -color-text-secondary;"/>
                <TextField fx:id="sourceField" styleClass="text-field"/>
                
                <Label text="Message" style="-fx-text-fill: -color-text-secondary;"/>
                <TextArea fx:id="messageArea" prefRowCount="4" wrapText="true" styleClass="text-area"/>
                
                <Region prefHeight="10"/>
                
                <Button text="Broadcast Alert" onAction="#handleBroadcast" styleClass="button-primary" maxWidth="Infinity"/>
                
            </VBox>
            
        </VBox>
    </center>

</BorderPane>
