<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="tn.finhub.controller.ForgotPasswordController"
           style="-fx-background-color: transparent;">

    <VBox alignment="CENTER" spacing="20" maxWidth="400" maxHeight="400" styleClass="card">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <Label text="Forgot Password?" styleClass="header-text"/>
        <Label text="Enter your email to receive a reset link" styleClass="sub-header-text"/>
        
        <Region prefHeight="20"/>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Email Address" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <TextField fx:id="emailField" promptText="name@company.com" styleClass="text-field"/>
        </VBox>
        
        <Label fx:id="messageLabel" wrapText="true" textFill="#ef4444" maxWidth="Infinity" alignment="CENTER"/>
        
        <Region prefHeight="10"/>

        <Button fx:id="sendBtn" text="Send Reset Link" onAction="#handleSendResetLink" maxWidth="Infinity" styleClass="button-primary"/>

        <HBox alignment="CENTER" spacing="5">
            <Hyperlink text="Back to Login" onAction="#handleBackToLogin" styleClass="hyperlink"/>
        </HBox>

    </VBox>

</StackPane>
