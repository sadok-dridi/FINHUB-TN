<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.finhub.controller.WalletController">
   <children>
      <javafx.scene.control.ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent; -fx-background: transparent; -fx-padding: 0;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <content>
            <VBox spacing="25.0" style="-fx-padding: 30;">
               <children>
                  <!-- Frozen Account Alert -->
                  <VBox fx:id="frozenAlertBox" visible="false" managed="false" spacing="10" style="-fx-background-color: rgba(239, 68, 68, 0.15); -fx-border-color: #EF4444; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 15;">
                      <children>
                          <HBox spacing="10" alignment="CENTER_LEFT">
                              <javafx.scene.shape.SVGPath content="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" style="-fx-fill: #EF4444;" scaleX="1.2" scaleY="1.2"/>
                              <Label text="%wallet.frozen.title" style="-fx-text-fill: #EF4444; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                          </HBox>
                          <Label text="%wallet.frozen.message" style="-fx-text-fill: #FCA5A5; -fx-font-size: 14px;" wrapText="true"/>
                      </children>
                  </VBox>

                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <Label text="%wallet.title" styleClass="header-text"/>
                        <Region HBox.hgrow="ALWAYS" />

                        <Button fx:id="topUpButton" text="%wallet.cash.in" onAction="#handleDeposit" styleClass="button-primary" style="-fx-background-color: #8B5CF6;">
                           <graphic>
                              <javafx.scene.shape.SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" style="-fx-fill: white;"/>
                           </graphic>
                        </Button>
                        <Button fx:id="transferButton" text="%wallet.transfer" onAction="#handleTransfer" styleClass="button-primary" style="-fx-background-color: #8B5CF6;">
                           <graphic>
                              <javafx.scene.shape.SVGPath content="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z" style="-fx-fill: white;"/>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  
                  <!-- Cards Container -->
                  <HBox spacing="20.0">
                     <children>
                        <!-- Total Balance Card -->
                        <VBox styleClass="card-balance" style="-fx-background-color: rgba(30, 27, 46, 0.85);" HBox.hgrow="ALWAYS" minWidth="0" prefWidth="0">
                           <children>
                              <Label text="%wallet.available.balance" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 16px;"/>
                              <Label fx:id="availableBalanceLabel" text="TND 0.00" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                           </children>
                        </VBox>
      
                        <!-- Escrow Balance Card -->
                         <VBox styleClass="card-escrow" style="-fx-background-color: rgba(30, 27, 46, 0.85);" HBox.hgrow="ALWAYS" minWidth="0" prefWidth="0">
                           <children>
                              <Label text="%wallet.escrow.balance" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 16px;"/>
                              <Label fx:id="escrowBalanceLabel" text="TND 0.00" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
      
                  <!-- Virtual Cards Section -->
                   <VBox spacing="15.0">
                      <children>
                         <HBox alignment="CENTER_LEFT">
                             <Label text="%wallet.virtual.cards" styleClass="header-text" style="-fx-font-size: 18px;"/>
                             <Region HBox.hgrow="ALWAYS" />
                             <Button fx:id="generateCardButton" text="%wallet.generate.card" onAction="#handleGenerateCard" styleClass="button-small-primary"/>
                         </HBox>
                         <HBox fx:id="cardsContainer" spacing="20.0" alignment="CENTER_LEFT" style="-fx-padding: 5 0;">
                              <!-- Cards added here -->
                         </HBox>
                      </children>
                   </VBox>
                  
                  <!-- Transactions Section -->
                  <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="%wallet.recent.transactions" styleClass="header-text" style="-fx-font-size: 18px;"/>
                        
                        <VBox fx:id="transactionContainer" spacing="15.0" style="-fx-padding: 5;">
                            <!-- Transactions will be added here dynamically -->
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </javafx.scene.control.ScrollPane>
   </children>
</AnchorPane>
