<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.finhub.controller.TransactionsController"
      spacing="15" style="-fx-background-color: transparent; -fx-padding: 30;">
    
    <!-- Quick Send Section -->
    <VBox spacing="10">
        <HBox alignment="CENTER_LEFT" spacing="10">
             <Label text="%transactions.quick.send" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
             <Region HBox.hgrow="ALWAYS"/>
             <javafx.scene.control.Button text="%transactions.new.contact" onAction="#handleAddContact" 
                    style="-fx-background-color: rgba(16, 185, 129, 0.1); -fx-text-fill: #10B981; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 6 12; -fx-cursor: hand; -fx-font-size: 12px; -fx-border-color: #10B981; -fx-border-radius: 8;"/>
        </HBox>
        
        <ScrollPane fitToHeight="true" vbarPolicy="NEVER" hbarPolicy="NEVER" pannable="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-width: 0;" minHeight="140" prefHeight="140">
            <content>
                <javafx.scene.layout.HBox fx:id="contactsContainer" spacing="15" style="-fx-background-color: transparent; -fx-padding: 5;">
                    <!-- Contacts populated here -->
                </javafx.scene.layout.HBox>
            </content>
        </ScrollPane>
    </VBox>

    <javafx.scene.control.Separator style="-fx-opacity: 0.1; -fx-background-color: white;"/>

    <!-- History Section -->
    <VBox spacing="15" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT">
            <Label text="%transactions.history" 
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);"/>
        </HBox>
        
        <javafx.scene.control.ListView fx:id="transactionListView" VBox.vgrow="ALWAYS" 
               style="-fx-background-color: transparent; -fx-control-inner-background: transparent; -fx-padding: 0;"/>
    </VBox>

</VBox>
