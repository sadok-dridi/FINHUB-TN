<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx"
           fx:controller="tn.finhub.controller.CompleteProfileController"
           style="-fx-background-color: transparent;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox alignment="CENTER" spacing="15" maxWidth="400" maxHeight="580" styleClass="card">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <Label text="%complete.profile.title" styleClass="header-text"/>
        <Label text="%complete.profile.subtitle" styleClass="sub-header-text"/>

        <Region prefHeight="10"/>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="%complete.profile.monthly.income" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <TextField fx:id="incomeField" promptText="e.g. 2500.00" styleClass="text-field"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="%complete.profile.monthly.expenses" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <TextField fx:id="expensesField" promptText="e.g. 1200.00" styleClass="text-field"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="%complete.profile.savings.goal" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <TextField fx:id="savingsField" promptText="e.g. 10000.00" styleClass="text-field"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="%complete.profile.risk.tolerance" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
            <ComboBox fx:id="riskBox" maxWidth="Infinity" promptText="Select Risk Level" styleClass="combo-box"/>
        </VBox>

        <Region prefHeight="10"/>

        <Region prefHeight="10"/>

        <Button text="%complete.profile.complete.button" onAction="#handleSaveProfile" maxWidth="Infinity" styleClass="button-primary"/>
        
        <Label fx:id="errorLabel" textFill="#ef4444" wrapText="true" textAlignment="CENTER"/>

    </VBox>

</StackPane>
