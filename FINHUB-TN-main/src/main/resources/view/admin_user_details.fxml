<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.finhub.controller.AdminUserDetailsController"
      style="-fx-padding: 30; -fx-background-color: transparent;" 
      spacing="20">
            
            <!-- Back Button & Header -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="%common.back" onAction="#handleBack" styleClass="button-back"/>
                <Label text="%admin.user.details.title" styleClass="header-text"/>
            </HBox>

            <!-- Content Scroll -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                <content>
                    <VBox spacing="20" style="-fx-padding: 10;">
                        
                        <!-- User Profile Card -->
                        <HBox spacing="20">
                            <VBox styleClass="card" spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-color: -color-card-bg; -fx-padding: 20; -fx-background-radius: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                                <Label text="%admin.user.details.personal" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                                <Separator />
                                <GridPane vgap="10" hgap="20">
                                    <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: -color-text-muted;"/>
                                    <Label fx:id="nameLabel" text="Loading..." GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-text-fill: -color-text-primary; -fx-font-weight: bold;"/>
                                    
                                    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: -color-text-muted;"/>
                                    <Label fx:id="emailLabel" text="Loading..." GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-text-fill: -color-text-primary;"/>
                                    
                                    <Label text="%common.role" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: -color-text-muted;"/>
                                    <Label fx:id="roleLabel" text="%common.loading" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-text-fill: -color-text-primary;"/>
                                    
                                    <Label text="%common.id" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-text-fill: -color-text-muted;"/>
                                    <Label fx:id="idLabel" text="%common.loading" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-text-fill: -color-text-muted;"/>
                                </GridPane>
                            </VBox>

                            <!-- Wallet Status Card -->
                            <VBox styleClass="card" spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-color: -color-card-bg; -fx-padding: 20; -fx-background-radius: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                                <Label text="Wallet Status" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: -color-text-primary;"/>
                                <Separator />
                                <HBox spacing="10" alignment="BASELINE_LEFT">
                                    <Label fx:id="balanceLabel" text="0.00" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: -color-primary;"/>
                                    <Label fx:id="currencyLabel" text="TND" style="-fx-font-size: 16px; -fx-text-fill: -color-text-secondary;"/>
                                </HBox>
                                <HBox spacing="10">
                                    <Label text="%common.status" style="-fx-text-fill: -color-text-muted;"/>
                                    <Label fx:id="walletStatusLabel" text="%common.loading" style="-fx-font-weight: bold;"/>
                                </HBox>
                            </VBox>
                        </HBox>

                        <!-- Actions Section -->
                        <HBox spacing="15" alignment="CENTER_LEFT">
                             <Button text="%admin.user.view.portfolio" styleClass="button-primary" onAction="#handleViewPortfolio" style="-fx-background-color: -color-primary; -fx-text-fill: white;"/>
                             <Button fx:id="freezeBtn" text="%admin.user.freeze.wallet" styleClass="button-warning" onAction="#handleFreezeWallet"/>
                        </HBox>



                        <!-- Danger Zone -->
                        <VBox style="-fx-border-color: #EF4444; -fx-border-width: 1; -fx-border-radius: 8px; -fx-padding: 20; -fx-background-color: rgba(239, 68, 68, 0.05);" spacing="10">
                            <Label text="Danger Zone" style="-fx-text-fill: #EF4444; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                            <Label text="%admin.user.delete.warning" style="-fx-text-fill: -color-text-secondary; -fx-font-size: 12px;"/>
                            <HBox alignment="CENTER_RIGHT">
                                <Button text="%admin.user.delete" styleClass="button-danger" onAction="#handleDeleteUser"/>
                            </HBox>
                        </VBox>

                    </VBox>
                </content>
            </ScrollPane>

        </VBox>
